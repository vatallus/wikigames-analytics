# Server Configuration
PORT=3001
NODE_ENV=development

# Steam API (No key required for basic endpoints!)
STEAM_API_KEY=optional

# Twitch API (Free - Register at dev.twitch.tv)
TWITCH_CLIENT_ID=your_client_id_here
